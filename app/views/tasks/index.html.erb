<h2>スケジュール一覧</h2>

<% if flash[:notice] %>
  <p class="notice"><%= falsh[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @task.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start_day %></td>
        <td><%= task.end_day %></td>
        <td><%= task.all_day %></td>
        <td><%= task.update_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "新規投稿", :new_task %></p>
